program nested_struct_shadow_fail
begin

	struct Bogus { var outerScope : int; };

	proc main()
	begin
	    var outer : Bogus;
    
	    proc dummy() begin
	         struct Bogus { var innerScope : int ; };
	         var inner : Bogus;
	         inner := new Bogus;
	         inner.outerScope := 123; // error, refers to local struct object.
	    end;
	    outer := new Bogus;
	    outer.outerScope := 1337;
	    dummy();
	end;

end;